<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/history"
        android:gravity="bottom|right"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.16" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_weight="0.19"
        android:gravity="bottom|right"
        android:paddingRight="10dp"
        android:maxLength="50">

    </TextView>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:stretchColumns="0,1,2,3">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">
            <Button
                android:onClick="onLP"
                android:id="@+id/blp"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="("/>
            <Button
                android:onClick="onRP"
                android:id="@+id/brp"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text=")"/>
            <Button
                android:onClick="onDel"
                android:id="@+id/bdel"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="Del"/>
            <Button
                android:onClick="onClear"
                android:id="@+id/bclear"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="Clear"/>


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">

            <Button
                android:onClick="onOne"
                android:id="@+id/b1"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="1"/>
            <Button
                android:onClick="onTwo"
                android:id="@+id/b2"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="2"/>
            <Button
                android:onClick="onThree"
                android:id="@+id/b3"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="3"/>
            <Button
                android:onClick="onAdd"
                android:id="@+id/badd"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="+"/>


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">
            <Button
                android:onClick="onFour"
                android:id="@+id/b4"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="4"/>
            <Button
                android:onClick="onFive"
                android:id="@+id/b5"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="5"/>
            <Button
                android:onClick="onSix"
                android:id="@+id/b6"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="6"/>
            <Button
                android:onClick="onSub"
                android:id="@+id/bsub"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="-"/>


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">
            <Button
                android:onClick="onSeven"
                android:id="@+id/b7"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="7"/>
            <Button
                android:onClick="onEight"
                android:id="@+id/b8"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="8"/>
            <Button
                android:onClick="onNine"
                android:id="@+id/b9"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="9"/>
            <Button
                android:onClick="onMul"
                android:id="@+id/bmul"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="*"/>


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">
            <Button
                android:onClick="onZero"
                android:id="@+id/b0"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="0"/>
            <Button
                android:onClick="onDec"
                android:id="@+id/bdec"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="."/>
            <Button
                android:onClick="onEq"
                android:id="@+id/beq"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="="/>
            <Button
                android:onClick="onDiv"
                android:id="@+id/bdiv"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="/"/>


        </TableRow>

    </TableLayout>
</LinearLayout>
